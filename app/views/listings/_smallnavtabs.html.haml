%ul#sbpills-tab.nav.nav-pills.small-navpills.justify-content-start.my-3{:role => "tablist"}

  %li.nav-item
    %a#pills-sell-tab.nav-link.active.smallerpill{"aria-controls" => "pills-sell", "aria-selected" => "true", "data-toggle" => "pill", :href => "#pills-sell", :role => "tab"} 
      =t 'offering'
  %li.nav-item
    %a#pills-buy-tab.nav-link.smallerpill{"aria-controls" => "pills-buy", "aria-selected" => "false", "data-toggle" => "pill", :href => "#pills-buy", :role => "tab"} 
      =t 'seeking'

#sbpills-tabContent.tab-content
  #pills-sell.tab-pane.fade.show.active{"aria-labelledby" => "pills-sell-tab", :role => "tabpanel"}
    %table.table.text-left
      %thead
        %tr
          %th 
          %th 
            = t 'tabletitle'
          %th 
            =t 'tabledescription'
          %th
            =t 'created'
          %th
            =t 'expires'
          %th.text-center 
            =t 'manage'
      %tbody
        = yield :tabsell
  #pills-buy.tab-pane.fade{"aria-labelledby" => "pills-buy-tab", :role => "tabpanel"}
    %table.table.text-left
      %thead
        %tr
          %th 
          %th 
            = t 'tabletitle'
          %th 
            =t 'tabledescription'
          %th
            =t 'created'
          %th
            =t 'expires'
          %th.text-center 
            =t 'manage'
      %tbody
        = yield :tabbuy