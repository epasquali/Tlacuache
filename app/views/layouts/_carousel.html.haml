#mainslider.carousel.slide.carousel-fade{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#mainslider"}
    %li{"data-slide-to" => "1", "data-target" => "#mainslider"}
    %li{"data-slide-to" => "2", "data-target" => "#mainslider"}
    %li{"data-slide-to" => "3", "data-target" => "#mainslider"}
  .carousel-inner
    .carousel-item.t15.active
      = image_tag "flowers.jpg", class: 'd-block w-100'
      .carousel-caption.text-left
        %h1 This is the first caption
        %p This is the blurb. with lots of lines I guess
    
    .carousel-item.t10
      =image_tag "lemur.jpg", class: 'd-block w-100'
    .carousel-item.t15
      =image_tag "mountain.jpg", class: 'd-block w-100'
    .carousel-item
      =image_tag "mountainlake.jpeg", class: 'd-block w-100'
  %a.carousel-control-prev{"data-slide" => "prev", :href => "#mainslider", :role => "button"}
    %span.carousel-control-prev-icon{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.carousel-control-next{"data-slide" => "next", :href => "#mainslider", :role => "button"}
    %span.carousel-control-next-icon{"aria-hidden" => "true"}
    %span.sr-only Next

:javascript
  $(document).ready(function(){
  
    $('#mainslider').carousel({
      interval: 5000
    });

  })